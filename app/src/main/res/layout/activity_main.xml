<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageHeader"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Concert"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/iconCalendar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/tvEventName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:tint="#5A4FCF" />

    <TextView
        android:id="@+id/tvEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 December, 2025"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/iconCalendar"
        app:layout_constraintStart_toEndOf="@id/iconCalendar"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tvEventTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday, 2-7 pm"
        android:textSize="14sp"
        android:textColor="#777777"
        app:layout_constraintTop_toBottomOf="@id/tvEventDate"
        app:layout_constraintStart_toStartOf="@id/tvEventDate"/>

    <ImageView
        android:id="@+id/iconLocation"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/iconCalendar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:tint="#5A4FCF" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University of Alberta"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/iconLocation"
        app:layout_constraintStart_toEndOf="@id/iconLocation"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tvOrganizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aayush"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iconLocation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"/>

    <!-- Organizer Label -->
    <TextView
        android:id="@+id/tvOrganizerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer"
        android:textSize="14sp"
        android:textColor="#777777"
        app:layout_constraintTop_toBottomOf="@id/tvOrganizer"
        app:layout_constraintStart_toStartOf="@id/tvOrganizer"/>

    <FrameLayout
        android:id="@+id/qrContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="@id/iconCalendar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="QR CODE\nHERE"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvAboutLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Event"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvOrganizerLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvAboutDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="About event"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/tvAboutLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvAboutDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPeople"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="PEOPLE"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5A4FCF"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="EDIT"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5A4FCF"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/btnMap"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="MAP"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5A4FCF"
            android:layout_margin="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

