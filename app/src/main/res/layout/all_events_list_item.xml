<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:src="@color/theme_color"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wed, Apr 28 â€¢ 5:30 PM"
            android:textSize="12sp"
            android:textColor="@color/theme_color"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/event_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Super Cool Event"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/event_image"
            app:layout_constraintTop_toBottomOf="@id/event_date"
            app:layout_constraintEnd_toStartOf="@id/event_status"/>

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/location"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:tint="@color/subtheme_color"
            app:layout_constraintStart_toEndOf="@id/event_image"
            app:layout_constraintTop_toBottomOf="@id/event_name"
            />

        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UofA"
            android:textSize="10sp"
            android:textColor="@color/subtheme_color"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/location_icon"
            app:layout_constraintTop_toBottomOf="@id/event_name"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
