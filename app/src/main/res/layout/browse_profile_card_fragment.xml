<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- placeholder square for image -->
        <View
            android:id="@+id/imageAvatar"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@color/design_default_color_primary_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- name + email -->
        <LinearLayout
            android:id="@+id/textsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintEnd_toStartOf="@id/buttonDelete"
            app:layout_constraintTop_toTopOf="@id/imageAvatar"
            app:layout_constraintBottom_toBottomOf="@id/imageAvatar">

            <TextView
                android:id="@+id/browse_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/browse_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <!-- User Type (Organizer / Entrant / Admin) -->
            <TextView
                android:id="@+id/browse_profile_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/organizer"
                android:textSize="14sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <!-- delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDelete"
            android:layout_width="110dp"
            android:layout_height="44dp"
            android:text="@string/delete"
            app:cornerRadius="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

