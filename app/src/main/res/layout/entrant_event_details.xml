<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/theme_color"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Event name"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_image" />

    <ImageView
        android:id="@+id/time_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_action_name_calender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_name"
        app:tint="@color/theme_color" />

    <ImageView
        android:id="@+id/location_icon_big"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_icon"
        app:tint="@color/theme_color" />

    <ImageView
        android:id="@+id/organizer_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/building"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_icon_big"
        app:tint="@color/theme_color" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Wed, Apr 28, 5:30 PM"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_icon"
        app:layout_constraintStart_toEndOf="@+id/time_icon"
        app:layout_constraintTop_toTopOf="@+id/time_icon" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="UofA"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/location_icon_big"
        app:layout_constraintStart_toEndOf="@+id/location_icon_big"
        app:layout_constraintTop_toTopOf="@+id/location_icon_big" />

    <TextView
        android:id="@+id/organizer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="301 Grinders Club"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/organizer_icon"
        app:layout_constraintStart_toEndOf="@+id/organizer_icon"
        app:layout_constraintTop_toTopOf="@+id/organizer_icon" />

    <ImageView
        android:id="@+id/qr"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:background="@color/subtheme_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/event_name"
        app:layout_constraintTop_toBottomOf="@id/header_image" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/description_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/organizer_icon"
        app:layout_constraintBottom_toTopOf="@id/event_action_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Long description"/>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/event_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme_color"
        android:text="Enroll"
        app:layout_constraintBottom_toTopOf="@id/navi_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/navi_bar"
        layout="@layout/navi_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>