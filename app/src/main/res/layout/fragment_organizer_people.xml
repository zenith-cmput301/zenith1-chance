<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".fragments.PeopleListFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Event info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/imgEvent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concert"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 December, 2025"
                android:textSize="11sp"
                android:textColor="#000000"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday, 2-7 pm"
                android:textSize="11sp"
                android:textColor="#777777"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Filter row with icon and status buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="4dp">

        <!-- Filter Icon -->
        <ImageView
            android:id="@+id/imgFilter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Filter"
            android:layout_marginEnd="12dp"
            app:tint="#000000" />

        <!-- Filter buttons -->
        <Button
            android:id="@+id/btnWaiting"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Waiting"
            android:textColor="#000000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnChosen"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Chosen"
            android:textColor="#000000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnAccepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Accepted"
            android:textColor="#000000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnDeclined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Declined"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- People List -->
    <ListView
        android:id="@+id/listPeople"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Export Button -->
    <Button
        android:id="@+id/btnExport"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:backgroundTint="#5C6EF8"
        android:paddingHorizontal="32dp"
        android:text="Export"
        android:textColor="@android:color/black"
        android:textSize="20dp"/>

    <!-- Bottom bar placeholder -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:background="#F8F8F8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
