<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="16dp">

        <!-- Event image -->
        <ImageView
            android:id="@+id/organizer_event_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/subtheme_color"
            android:src="@android:drawable/ic_menu_gallery" />

        <!-- Event name -->
        <TextView
            android:id="@+id/event_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Event name:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/event_name_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_name_blank"
            android:padding="12dp" />

        <!-- Date & time -->
        <TextView
            android:id="@+id/event_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/date_and_time"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/event_date_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/event_date_blank"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/darker_gray"
            android:gravity="center_vertical|start" />

        <!-- Caption for event date -->
        <TextView
            android:id="@+id/event_date_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="The date and time of your event"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Registration date -->
        <TextView
            android:id="@+id/event_registration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Registration date:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/event_registration_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/event_date_blank"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/darker_gray"
            android:gravity="center_vertical|start" />

        <!-- Caption for registration date -->
        <TextView
            android:id="@+id/event_registration_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="The date of the lottery selection"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Invitation deadline date -->
        <TextView
            android:id="@+id/event_deadline_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Invitation deadline:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/event_deadline_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/event_date_blank"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/darker_gray"
            android:gravity="center_vertical|start" />

        <TextView
            android:id="@+id/event_deadline_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Deadline to respond to invitations"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Location -->
        <TextView
            android:id="@+id/event_location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Event location:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/event_location_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_location_blank"
            android:padding="12dp" />

        <!-- Maximum entrants -->
        <TextView
            android:id="@+id/event_max_entrants_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Maximum entrants (optional):"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/event_max_entrants_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="e.g. 100"
            android:padding="12dp"
            android:inputType="number"
            android:maxLines="1" />

        <!-- Description -->
        <TextView
            android:id="@+id/event_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Event description:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/event_description_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_description_blank"
            android:minLines="3"
            android:gravity="top"
            android:padding="12dp" />

        <!-- Geolocation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/event_geolocation_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Geolocation required (optional):"
                android:textSize="14sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/event_geolocation_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/event_creation_discard_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Discard"
                android:backgroundTint="@color/subtheme_color" />

            <Button
                android:id="@+id/event_creation_save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Save"
                android:backgroundTint="@color/theme_color"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

